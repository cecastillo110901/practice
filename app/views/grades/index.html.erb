<p id="notice"><%= notice %></p>

<h1>Grades</h1>


      <% if @filter == "asc" %>
      <%elsif @filter == "desc" %>
      <% end %>
<h2>Sort By:
      <%= link_to 'Ascending   ', grades_path(student_grade: false)%>
      <%= link_to 'Descending', grades_path(student_grade: true)%></h2>

<table>
  <thead>
    <tr>
      <th>Student ID</th>
      <th>Student Name</th>
      <th>Student Grade</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student_id %></td>
        <td><%= grade.student_name %></td>
        <td><%= grade.student_grade %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grade', new_grade_path %>
